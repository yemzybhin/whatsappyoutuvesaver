<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.YoutubePage">

    <androidx.cardview.widget.CardView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        app:cardBackgroundColor="#00393B40"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardBackgroundColor="@color/primarycolor2"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="10dp"
                android:src="@drawable/cancel1"></ImageView>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/tohold"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:src="@drawable/youtube2"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@color/primarycolor3"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsansbold"
                android:gravity="center"
                android:text="Youtube"
                android:textColor="@color/primarycolor3"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>

            <View
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@color/primarycolor3"></View>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ytpagebg"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:paddingTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tohold">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/reloadlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reload"
                android:backgroundTint="@color/primarycolor1"
                android:textColor="@color/primarycolor3"
                android:layout_gravity="center"
                android:layout_margin="30dp"></Button>

            <ProgressBar
                android:id="@+id/instructionsloading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_gravity="center"></ProgressBar>
            <LinearLayout
                android:id="@+id/youtubestuff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/videolink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/savebackground"
                    android:fontFamily="@font/productsansregular"
                    android:hint="Paste Video Link Here..."
                    android:inputType="text"
                    android:padding="18dp"
                    android:textColor="@color/primarycolor3"
                    android:textColorHint="@color/primarycolor3"
                    android:textSize="15sp"
                    android:textStyle="italic"></EditText>
                <Button
                    android:id="@+id/proceedtowatchadd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/primarycolor2"
                    android:fontFamily="@font/zonablack"
                    android:text="GO"
                    android:textColor="@color/primarycolor3"
                    android:textSize="23sp"
                    app:cornerRadius="10dp"></Button>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/instructionbg"
                    android:fontFamily="@font/productsansregular"
                    android:padding="10dp"
                    android:text="How to download a video"
                    android:textColor="@color/textcolor"
                    android:textSize="12sp"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/productsansregular"
                    android:lineSpacingExtra="4dp"
                    android:text="To download a youtube video. Open the video on youtube. Click on the share button beneath the video. Copy the link generated by the share button. Open this app and paste the link in the designated field above"
                    android:textColor="@color/textcolor"
                    android:textSize="12sp"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/instructionbg"
                    android:fontFamily="@font/productsansregular"
                    android:padding="10dp"
                    android:text="Videos that would not be downloaded"
                    android:textColor="@color/textcolor"
                    android:textSize="12sp"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/productsansregular"
                    android:lineSpacingExtra="6dp"
                    android:text="1. Age restricted videos. \n2. Video Links not copied from the share button in the Youtube App or website. \n3. Links that are not youtube video links."
                    android:textColor="@color/textcolor"
                    android:layout_marginBottom="60dp"
                    android:textSize="12sp"></TextView>
                <LinearLayout
                    android:id="@+id/adspace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="150dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/addmessage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/primarycolor1"
                                android:padding="7dp"
                                android:text="Advert"
                                android:textColor="@color/white"></TextView>

                            <TextView
                                android:id="@+id/addtitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/productsansbold"
                                android:gravity="center"
                                android:text="AD TITLE"
                                android:textColor="@color/textcolor"></TextView>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/primarycolor3"></View>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/adimage"
                        android:layout_width="wrap_content"
                        android:elevation="2dp"
                        android:layout_gravity="center"
                        android:layout_height="200dp"></ImageView>

                    <TextView
                        android:id="@+id/addescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/productsansregular"
                        android:text="This is the way of life for all and i have seen the way these things are done."
                        android:textColor="@color/textcolor"
                        android:textSize="13sp"></TextView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/watchadvideo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/primarycolor1">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/playvid"></ImageView>
                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/adbuttonlink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="10dp"
                            android:background="@color/primarycolor3"
                            android:padding="10dp"
                            android:text="VISIT"
                            android:textColor="@color/white"
                            android:textSize="10sp"></TextView>

                        <TextView
                            android:id="@+id/postanad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="4dp"
                            android:background="@color/primarycolor3"
                            android:padding="10dp"
                            android:text="POST AN AD"
                            android:textColor="@color/white"
                            android:textSize="10sp"></TextView>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


</ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>