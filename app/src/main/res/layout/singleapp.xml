<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@color/white"
            android:layout_gravity="center"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_moreappsimage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_launcher_background"></ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_appnameonplaystore"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Science Facts Guru"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/textcolor"
            android:layout_gravity="center"></TextView>
   <ImageView
       android:id="@+id/iv_downloadapp"
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:src="@drawable/less1"
       android:layout_weight="1"
       android:layout_gravity="center"></ImageView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>