<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/primarycolor2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/adspace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/addmessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/primarycolor1"
                        android:padding="7dp"
                        android:text="Advert"
                        android:textColor="@color/white"></TextView>

                    <TextView
                        android:id="@+id/addtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsansbold"
                        android:gravity="center"
                        android:text="AD TITLE"
                        android:textColor="@color/textcolor"></TextView>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/primarycolor3"></View>
            </LinearLayout>
            <ImageView
                android:id="@+id/adimage"
                android:layout_width="wrap_content"
                android:elevation="2dp"
                android:layout_gravity="center"
                android:layout_height="200dp"></ImageView>

            <TextView
                android:id="@+id/addescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/productsansregular"
                android:text="This is the way of life for all and i have seen the way these things are done."
                android:textColor="@color/textcolor"
                android:textSize="13sp"></TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/watchadvideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/primarycolor1">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/playvid"></ImageView>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adbuttonlink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:background="@color/primarycolor3"
                    android:padding="10dp"
                    android:text="VISIT"
                    android:textColor="@color/white"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/postanad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="4dp"
                    android:background="@color/primarycolor3"
                    android:padding="10dp"
                    android:text="POST AN AD"
                    android:textColor="@color/white"
                    android:textSize="10sp"></TextView>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>